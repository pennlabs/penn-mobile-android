<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="101dp">

    <!-- TODO 1: make fitness list item layout -->

    <ImageView
        android:id="@+id/gym_image_view"
        android:layout_width="175dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gym_fox"/> <!-- placeholder image -->

    <TextView
        android:id="@+id/gym_status_view"
        style="@style/DiningStatusLabel"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/gym_image_view"
        app:layout_constraintEnd_toEndOf="@id/fitness_loading_guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/label_green"
        android:text="Open"/> <!-- placeholder text -->

    <TextView
        android:id="@+id/gym_name_view"
        style="@style/HallName"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/gym_image_view"
        app:layout_constraintTop_toBottomOf="@id/gym_status_view"
        app:layout_constraintEnd_toEndOf="@id/fitness_loading_guideline"
        android:text="Pottruck"/> <!-- placeholder text -->

    <TextView
        android:id="@+id/gym_hours_view"
        style="@style/Menu"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/gym_image_view"
        app:layout_constraintTop_toBottomOf="@id/gym_name_view"
        app:layout_constraintEnd_toEndOf="@id/fitness_loading_guideline"
        android:text="Closes at 9:00PM"
        android:visibility="visible" />


    <android.support.constraint.Guideline
        android:id="@+id/fitness_loading_guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />


</android.support.constraint.ConstraintLayout>