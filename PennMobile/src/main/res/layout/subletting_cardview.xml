<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subletting_cardview_item"
    android:layout_width="200dp"
    android:layout_height="340dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/subletting_cardview_item_layout">

        <ImageView
            android:id="@+id/subletting_cardview_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/subletting_cardview_title"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:text="Title"
            android:textSize="20dp"
            android:layout_width="fill_parent"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/subletting_cardview_image"
            app:layout_constraintStart_toStartOf="@id/subletting_cardview_image" />

        <TextView
            android:id="@+id/subletting_cardview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_light"
            android:text="Price (negotiable)"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/subletting_cardview_title"
            app:layout_constraintStart_toStartOf="@id/subletting_cardview_image" />

        <TextView
            android:id="@+id/subletting_cardview_rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_light"
            android:text="num bd | num ba"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/subletting_cardview_price"
            app:layout_constraintStart_toStartOf="@id/subletting_cardview_image" />

        <TextView
            android:id="@+id/subletting_cardview_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_light"
            android:text="Start - End Date"
            android:textSize="14dp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/subletting_cardview_rooms"
            app:layout_constraintStart_toStartOf="@id/subletting_cardview_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>