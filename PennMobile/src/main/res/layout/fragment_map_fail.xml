<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:id="@+id/no_map_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/no_map_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_map_description"
        android:textSize="10pt"
        android:layout_centerHorizontal="true"
        android:textColor="@color/settings_grey"
        android:layout_below="@id/no_map_center"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/no_map_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/beardedman"
        android:contentDescription="@string/no_map_beardman"
        android:cropToPadding="false"
        android:layout_alignRight="@id/no_map_tv"
        android:layout_marginTop="100dp"
        android:layout_alignEnd="@id/no_map_tv"
        android:layout_above="@id/no_map_tv"
        android:layout_alignLeft="@id/no_map_tv"
        android:layout_alignStart="@id/no_map_tv" />

</RelativeLayout>