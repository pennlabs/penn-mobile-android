<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:layout_marginStart="16dp">


    <TextView
        android:id="@+id/sublettee_intro_text"
        style="@style/title_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tell us a bit about what you are looking for"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sublettee_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:text="When are you subletting?"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sublettee_intro_text" />

    <EditText
        android:id="@+id/sublettee_start_date_text"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="date"
        android:text="Start Date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sublettee_date_text" />

    <EditText
        android:id="@+id/sublettee_end_date_text"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="date"
        android:text="End Date"
        app:layout_constraintLeft_toRightOf="@id/sublettee_start_date_text"
        app:layout_constraintTop_toBottomOf="@id/sublettee_date_text" />

    <CheckBox
        android:id="@+id/sublettee_date_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Dates Flexible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sublettee_start_date_text"/>

    <TextView
        android:id="@+id/sublettee_price_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:text="How much are you willing to pay per month?"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sublettee_date_checkbox" />

    <EditText
        android:id="@+id/sublettee_min_price_text"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="date"
        android:text="Minimum Price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sublettee_price_text" />

    <EditText
        android:id="@+id/sublettee_max_price_text"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="date"
        android:text="Maximum Price"
        app:layout_constraintLeft_toRightOf="@id/sublettee_min_price_text"
        app:layout_constraintTop_toBottomOf="@id/sublettee_price_text" />

    <TextView
        android:id="@+id/sublettee_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:text="Desired location"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sublettee_min_price_text" />

    <EditText
        android:id="@+id/sublettee_location_edittext"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="date"
        android:text="Location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sublettee_location_text" />

    <CheckBox
        android:id="@+id/sublettee_location_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Location Flexible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sublettee_location_edittext"/>

    <Button
        android:id="@+id/sublettee_enter_subletting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Go"
        android:backgroundTint="@color/aqua"
        android:layout_marginBottom="90dp"
        app:layout_constraintTop_toBottomOf="@id/sublettee_location_checkbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>