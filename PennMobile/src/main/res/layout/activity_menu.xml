<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pennapps.labs.pennmobile.MenuActivity">

    <RelativeLayout
        android:padding="15sp"
        android:background="@color/color_primary"
        android:id="@+id/dining_hall_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            tools:text="1920 Commons"
            android:id="@+id/dining_hall_name"
            style="@style/HallNameWhite" />

        <TextView
            android:id="@+id/dining_hall_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/clear"
            android:layout_toStartOf="@+id/clear"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            tools:background="@drawable/label_green"
            tools:text="Open" />

        <Button
            android:id="@+id/clear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="finish"
            android:background="@drawable/abc_ic_clear_mtrl_alpha"/>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/dining_hall_title"
        android:layout_marginLeft="16dip"
        android:layout_marginStart="16dip"
        android:layout_marginBottom="16dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/menu_parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Menus inserted here programmatically -->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
