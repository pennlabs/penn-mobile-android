<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="15dp"
        android:id="@+id/dining_hall_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            tools:text="1920 Commons"
            android:id="@+id/dining_hall_name"
            style="@style/HallName" />

        <TextView
            android:id="@+id/dining_hall_status"
            tools:text="Open"
            tools:background="@drawable/label_green"
            style="@style/DiningStatusLabel" />

    </RelativeLayout>

    <ScrollView
        android:layout_marginLeft="16dip"
        android:layout_marginStart="16dip"
        android:layout_marginBottom="16dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/menu_parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Menus inserted here programmatically -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>
