<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width = "300dp"
    android:layout_height = "122dp"
    android:orientation="horizontal"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/gsr_reservation_widget_item_iv"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@color/browser_actions_bg_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id=
                "@+id/gsr_reservation_widget_item_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="VP Weigle Room 110"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gsr_reservation_widget_item_time_tv"
            style="@style/Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:text="Friday April 20 \n2:00pm-3:00 pm"
            app:layout_constraintStart_toEndOf="@+id/gsr_reservation_iv"
            app:layout_constraintTop_toBottomOf="@+id/gsr_reservation_location_tv" />
    </LinearLayout>

</LinearLayout>