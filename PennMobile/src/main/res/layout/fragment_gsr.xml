<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/gsr_select_date"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/gsr_selection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gsr_select_time"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gsr_select_time"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/gsr_selection"
        app:layout_constraintStart_toEndOf="@id/gsr_select_date"
        app:layout_constraintEnd_toStartOf="@+id/gsr_building_selection"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/gsr_building_selection"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/gsr_selection"
        app:layout_constraintStart_toEndOf="@id/gsr_select_time"
        app:layout_constraintEnd_toStartOf="@id/gsr_duration"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/gsr_duration"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/gsr_selection"
        app:layout_constraintStart_toEndOf="@+id/gsr_building_selection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@id/gsr_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/no_results" />
    </LinearLayout>

    <include layout="@layout/loading_panel" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/gsr_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gsr_selection">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gsr_rooms_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:list_item="@layout/gsr_building" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.constraint.Guideline
        android:id="@+id/gsr_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="115dp" />

</android.support.constraint.ConstraintLayout>