<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColor">#212121</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="InfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="RatingFont">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="MainIcon">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MainRelativeLayout">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:onClick">onHomeButtonClick</item>
    </style>

    <style name="MainTableLayout">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:baselineAligned">true</item>
    </style>

    <style name="MealName" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DiningStation" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FoodItem" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Menu" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HallName" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">80dp</item>
    </style>

    <style name="DiningStatusLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
</resources>